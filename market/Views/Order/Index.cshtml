@model market.Models.Item

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="text-center">
        <h2> @Html.DisplayFor(model => model.ItemName)</h2>
        <form method="post">
            @Html.HiddenFor(model => model.ItemName)
            @Html.HiddenFor(model => model.ItemId)
            @Html.HiddenFor(model => model.quantity)
            @Html.HiddenFor(model => model.Price)
            @Html.HiddenFor(model => model.img)




            <div class="d-flex">

                <hr />
                <img style="width: 400px; height: 400px;" class="p-2 w-75" src="data:image/*;base64,@(Convert.ToBase64String(Model.img))">

                <div class="p-2 w-25" style="font-size: 25px; background-color: aliceblue">


                    <div>
                        <b>
                            @Html.DisplayNameFor(model => model.Price):
                        </b>

                        @Html.DisplayFor(model => model.Price)
                    </div>
                    <div>
                        <label for="Quantity1">Quantity</label>
                        <input type="number" id="Quantity1" name="Quantity1" required
                               min="1" max="@Model.quantity" aria-disabled="True">
                    </div>
                </div>

            </div>
            <input type="submit" class="btn btn-info" value="Add To Basket" />
        </form>

    </div>