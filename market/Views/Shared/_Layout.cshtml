                    }
                    @if (GlobalVariables.admin == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link alert-danger" href="~/Admin/OrderList">Orders</a>
                        </li>
                    }

                </ul>
                
                @if (GlobalVariables.LoginUser == null)
                {
                    @Html.ActionLink("login","RealLogin","Login",null,new{@class = "nav-link"})
                }
                else
                {
                    
                    <a class="nav-link disabled" href="#" >@GlobalVariables.LoginUser.Name</a>
                }
                <img src="~/Data/DefaultIcon.png" style="width: 30px" />
            </div>
            </nav>

            <div style="margin-left: 10px;margin-right: 10px" >
                <div style="min-height: 500px;">
                    @RenderBody()

                </div>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>


    
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
</script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>