                    @if (GlobalVariables.LoginUser != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Login/LogOut">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="~/Login/RealLogin">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/Login/Index">Sign up</a>
                        </li>
                    }


                    @if (GlobalVariables.counter != 0)
                    {
                        <li class="nav-item">
                            <b>
                                <a class="nav-link" href="~/Order/Basket">Basket (<span style="color: red">@GlobalVariables.counter</span>)</a>
                            </b>
                            @*  @Html.ActionLink("basket--" + GlobalVariables.counter + "--", "Basket", "Order", null, new {@class = "nav-link"})*@
